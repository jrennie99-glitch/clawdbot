# Copy to .env and fill with your Twilio credentials
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
# Must be a WhatsApp-enabled Twilio number, prefixed with whatsapp:
TWILIO_WHATSAPP_FROM=whatsapp:+17343367101

# ============================================================================
# SERVER
# ============================================================================
PORT=3000
NODE_ENV=development

# ============================================================================
# SETUP
# ============================================================================
# Generated by 'npm run setup' - do not share
SETUP_TOKEN=
SETUP_LOCKED=false

# ============================================================================
# SECURITY - SUPER SUPREME GOD MODE
# ============================================================================

# Kill Switch - Instantly disables ALL tool execution
KILL_SWITCH=false
KILL_SWITCH_CONFIRM_CODE=CONFIRM_DEACTIVATE

# Lockdown Mode - Forces confirmation for all sensitive operations
LOCKDOWN_MODE=true

# HITL (Human-in-the-Loop)
HITL_MODE=selective

# SSRF Protection
BLOCK_PRIVATE_NETWORKS=true
ALLOWLIST_OUTBOUND_DOMAINS=api.moonshot.cn,openrouter.ai,api.openai.com,api.anthropic.com

# Rate Limiting
RATE_LIMIT_MESSAGES_PER_USER=60
RATE_LIMIT_MESSAGES_PER_IP=100
RATE_LIMIT_MESSAGES_GLOBAL=1000
RATE_LIMIT_TOOLS_PER_RUN=100
RATE_LIMIT_TOOLS_PER_MINUTE=30
RATE_LIMIT_LLM_PER_MINUTE=20
RATE_LIMIT_LLM_PER_HOUR=500

# ============================================================================
# BUDGETS
# ============================================================================
TOKEN_BUDGET_PER_RUN_USD=1
TOKEN_BUDGET_DAILY_USD=10
TOKEN_BUDGET_MONTHLY_USD=100
TOKENS_PER_RUN_LIMIT=100000
TOOL_CALLS_PER_RUN_LIMIT=100

# Budget Guardrails
BUDGET_WARNING_THRESHOLD=0.7
BUDGET_AUTO_DOWNGRADE=true
BUDGET_HARD_STOP=true

# ============================================================================
# LLM PROVIDERS
# ============================================================================
LLM_PROVIDER=auto

# Moonshot / Kimi
MOONSHOT_API_KEY=
KIMI_API_KEY=
MOONSHOT_BASE_URL=https://api.moonshot.cn/v1

# OpenRouter
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Local (Ollama / vLLM)
LOCAL_BASE_URL=http://localhost:11434/v1
OLLAMA_HOST=http://localhost:11434

# Optional (not required)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_API_KEY=

# ============================================================================
# DEBUG
# ============================================================================
DEBUG_LOGGING=false
