# Copy to .env and fill with your Twilio credentials
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
# Must be a WhatsApp-enabled Twilio number, prefixed with whatsapp:
TWILIO_WHATSAPP_FROM=whatsapp:+17343367101

# ============================================================================
# SECURITY - SUPER SUPREME GOD MODE
# ============================================================================

# Kill Switch - Instantly disables ALL tool execution
# Set to 'true' to activate
KILL_SWITCH=false
KILL_SWITCH_CONFIRM_CODE=CONFIRM_DEACTIVATE

# Lockdown Mode - Forces confirmation for all sensitive operations
LOCKDOWN_MODE=false
LOCKDOWN_NETWORK_ALLOWLIST=api.anthropic.com,api.openai.com,api.moonshot.cn,openrouter.ai,github.com

# Rate Limiting
RATE_LIMIT_MESSAGES_PER_USER=60
RATE_LIMIT_MESSAGES_PER_IP=100
RATE_LIMIT_MESSAGES_GLOBAL=1000
RATE_LIMIT_TOOLS_PER_RUN=100
RATE_LIMIT_TOOLS_PER_MINUTE=30
RATE_LIMIT_LLM_PER_MINUTE=20
RATE_LIMIT_LLM_PER_HOUR=500

# Cost Budgets
DAILY_COST_LIMIT_USD=10
PER_RUN_COST_LIMIT_USD=1
TOKENS_PER_RUN_LIMIT=100000
TOOL_CALLS_PER_RUN_LIMIT=100

# SSRF Protection
BLOCK_PRIVATE_NETWORKS=true
ALLOWLIST_OUTBOUND_DOMAINS=

# ============================================================================
# LLM PROVIDERS - Multi-provider routing
# ============================================================================

# Provider selection: auto | moonshot | openrouter | ollama | vllm | anthropic | openai
LLM_PROVIDER=auto

# Moonshot / Kimi
MOONSHOT_API_KEY=
MOONSHOT_BASE_URL=https://api.moonshot.cn/v1
# Alias for MOONSHOT_API_KEY
KIMI_API_KEY=

# OpenRouter
OPENROUTER_API_KEY=
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_REFERER=https://moltbot.local

# Local (Ollama / vLLM)
OLLAMA_HOST=http://localhost:11434
OLLAMA_BASE_URL=http://localhost:11434
VLLM_BASE_URL=
VLLM_API_KEY=
LOCAL_BASE_URL=http://localhost:11434/v1

# Optional providers (not required for operation)
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
GOOGLE_API_KEY=
GEMINI_API_KEY=

# ============================================================================
# PRODUCTION SETTINGS
# ============================================================================

# Environment
NODE_ENV=development

# Debug logging in production (default: false)
DEBUG_LOGGING=false
